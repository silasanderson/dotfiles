F1
		dmenu-scrot

F1 + super
		tpd

F2
    setbg ~/media/image/wallpaper/

F2 + super
    setbg .config/black.png

XF86MonBrightnessDown
    doas xbacklight -dec 5

XF86MonBrightnessUp
    doas xbacklight -inc 5

XF86Display
		displayselect

super + w
    $BROWSER

super +W
    networkmanager_dmenu

super + r
    $TERM -e lf
		
super + R
    $TERM -e wttr -r

super + H
    $TERM -e htop

XF86AudioRaiseVolume
    sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 +1%"

XF86AudioLowerVolume
    sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 -1%"

XF86AudioMute
    pactl set-sink-mute 0 toggle && if pamixer --get-mute = true; then notify-send -t 5000 "mute"; else notify-send -t 5000 "unmute"; fi

XF86AudioMicMute
    pactl set-source-mute 1 toggle

super + N
    $TERM -e nvim ~/vimwiki/index.wiki

super + Return
		$TERM

super + semicolon
    dmenu_run

super + Return + shift
    tdrop -w 1916 -y 0 $TERM -n "float"

super + apostrophe
    tdrop -w 60% -y 30% -x 20% -n 1 st -n "cfloat" -e bc -lq

super + D
    qutebrowser --target window https://discord.com/channels/@me
    
super + M
    $TERM -e neomutt

super + s
		search

super + S
		searchq
