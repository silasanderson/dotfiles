F1
		dmenu-scrot

F1 + super
		tpd

F2
    setbg ~/media/image/wallpaper/

F2 + super
    setbg .config/black.png

XF86MonBrightnessDown
    doas xbacklight -dec 5

XF86MonBrightnessUp
    doas xbacklight -inc 5

super + w
    $BROWSER

super +W
    networkmanager_dmenu

super + r
    $TERM -e lf

super + R
    $TERM -e htop

XF86AudioRaiseVolume
    sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 +1%"

XF86AudioLowerVolume
    sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 -1%"

XF86AudioMute
    pactl set-sink-mute 0 toggle && if pamixer --get-mute = true; then notify-send -t 5000 "mute"; else notify-send -t 5000 "unmute"; fi

XF86AudioMicMute
    pactl set-source-mute 1 toggle

super + n
    $TERM -e nvim ~/vimwiki/index.wiki

alt + Return
    $TERM

alt + d
    dmenu_run

alt + Return + shift
    tdrop -w 1916 -y 0 st -n "tdrop"

super + D
    qutebrowser --target window https://discord.com/channels/@me
    
super + m
    $TERM -e neomutt

super + s
		search

super + S
		searchq
